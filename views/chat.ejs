<div class="col-lg-6 offset-lg-3 my-5">
    <h3 class="mb-4"><%= chatConfig.nickname %> - <%= chatConfig.roomLabel %></h3>

    <div class="d-flex gap-4 justify-content-center">
        <div class="col-md-8 chatBox">
            <h6>Üzenetek</h6>
            <ul id="messages" class="msgList">
                
            </ul>
        </div>
        <div class="col-md-4 usersListBox">
            <h6>Felhasználók</h6>
        </div>
    </div>

    <div class="d-flex gap-4 mt-3 justify-content-center">
        <div class="form-floating d-flex col-md-8">
            <input type="text" class="form-control" id="messageInput" placeholder="Írd be az üzeneted...">
            <label for="messageInput">Írd be az üzeneted...</label>
            <button class="btn btn-outline-primary ms-2">Küldés</button>
        </div>
        <div class="col-md-4 d-flex">
            <button id="leaveRoom" class="btn btn-outline-danger w-100">Kilépés</button>
        </div>
    </div>
</div>